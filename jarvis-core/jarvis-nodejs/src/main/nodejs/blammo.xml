<configuration>
	<appender name="console" type="console_appender">
		<encoder type="dummy_encoder" />
		<layout type="pattern_layout">%timestamp|%pid|%logger|%level|%message</layout>
		<filters>
			<filter type="threshold_filter">INFO</filter>
		</filters>
	</appender>

	<appender name="xmppsrv" type="file_appender">
		<encoder type="dummy_encoder"/>
		<layout type="pattern_layout">%timestamp|%pid|%logger|%level|%message</layout>
		<config>
			<filter type="threshold_filter">INFO</filter>
		</config>
	</appender>

	<appender name="xmppcli" type="file_appender">
		<encoder type="dummy_encoder"/>
		<layout type="pattern_layout">%timestamp|%pid|%logger|%level|%message</layout>
		<config>
			<filter type="threshold_filter">INFO</filter>
		</config>
	</appender>

	<logger name="listener">
		<appender-ref ref="console" />
	</logger>

	<logger name="crontab">
		<appender-ref ref="console" />
	</logger>

	<logger name="services">
		<appender-ref ref="console" />
	</logger>

	<logger name="plugins">
		<appender-ref ref="console" />
	</logger>

	<logger name="kernel">
		<appender-ref ref="console" />
	</logger>

	<logger name="xmppcli">
		<appender-ref ref="console" />
		<appender-ref ref="xmppcli" />
	</logger>

	<logger name="xmppsrv">
		<appender-ref ref="console" />
		<appender-ref ref="xmppsrv" />
	</logger>

	<logger name="neo4j">
		<appender-ref ref="console" />
	</logger>

	<root level="trace">
		<appender-ref ref="console" />
	</root>
</configuration>
