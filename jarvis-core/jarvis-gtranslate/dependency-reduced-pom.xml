<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bob</artifactId>
    <groupId>org.yroffin.com.bob</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jarvis-gtranslate</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>install-file-gtranslate</id>
            <phase>compile</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>${project.basedir}/lib/gtranslateapi-1.0.jar</file>
              <groupId>${project.groupId}</groupId>
              <artifactId>jarvis-libs-gtranslate</artifactId>
              <packaging>jar</packaging>
              <version>${project.version}</version>
            </configuration>
          </execution>
          <execution>
            <id>install-file-jl</id>
            <phase>compile</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>${project.basedir}/lib/jl1.0.jar</file>
              <groupId>${project.groupId}</groupId>
              <artifactId>jarvis-libs-jl</artifactId>
              <packaging>jar</packaging>
              <version>${project.version}</version>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

